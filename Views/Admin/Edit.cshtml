@model PetShopApplication.Models.Animal
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-4">Edit Animal</h1>

            <form method="post" asp-action="Edit" asp-controller="Admin" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
                </div>

                <div class="form-group">
                    <label for="CategoryId">Category</label>
                    @if (ViewBag.Categories != null)
                    {
                        <select class="form-control" id="CategoryId" name="CategoryId">
                            @foreach (var category in ViewBag.Categories as List<PetShopApplication.Models.Category>)
                            {
                                <option value="@category.Id" selected="@(category.Id == Model.CategoryId)">@category.Name</option>
                            }
                        </select>
                    }
                    else
                    {
                        <p>No categories available.</p>
                    }
                </div>

                <div class="form-group">
                    <label for="Age">Age</label>
                    <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" />
                </div>

                <div class="form-group">
                    <label for="Description">Description</label>
                    <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
                </div>

                <div class="form-group">
                    <label for="Picture">Picture URL (optional)</label>
                    <input type="text" class="form-control mb-2" id="Picture" name="Picture" value="@Model.Picture" placeholder="Enter image URL (optional)" />

                    <div class="text-center mb-2">
                        <label>Current Image</label><br />
                        <img src="@Model.Picture" class="img-fluid mb-3" alt="@Model.Name" style="max-width: 200px;" />
                    </div>

                    <label for="PictureFile">Upload New Picture (optional)</label>
                    <input type="file" class="form-control-file" id="PictureFile" name="PictureFile" accept="image/*" />
                </div>

                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </form>
        </div>
    </div>
</div>


