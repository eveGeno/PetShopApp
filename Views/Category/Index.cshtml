@model IEnumerable<PetShopApplication.Models.Category>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Categories</h1>

    <div class="text-center mb-4">
        <a href="/Category/Add" class="btn btn-primary">Add New Category</a>
    </div>

    <table class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td class="text-center">
                        <a href="/Category/Edit/@category.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                        <form method="post" action="/Category/Delete/@category.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                            <button type="submit" class="btn btn-danger btn-sm mx-1">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
